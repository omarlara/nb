    <td style="padding: 10px 20px 20px">
      <table width="100%" style="background:url('{{ imgPath }}/{{ images.movebox }}') no-repeat top right">
        <tr>
          <td>
            {{> _movebox align='left' title='Summary' subtitle='From:' content='123 Fake St<br>Toronto, ON<br>M2M 2M2' details='Service Starting:' date='October 12, 2016' }}
          </td>
        </tr>
      </table>
    </td>
  </tr>
  {{> _arrow }}
  <tr>
    <td style="padding: 10px 20px 20px">
      {{> _movebox align='right' title='' subtitle='To:' content='123 Fake St<br>Toronto, ON<br>M2M 2M2' details='Service Ending:' date='October 12, 2016' }}
    </td>
  </tr>
  {{> _hr }}
  {{> _info }}
  {{> _signin }}
